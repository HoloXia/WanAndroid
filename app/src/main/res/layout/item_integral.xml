<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_rank_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@mipmap/ic_rank_no1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rank"
        style="@style/textMainBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_rank_top"
        app:layout_constraintEnd_toEndOf="@id/iv_rank_top"
        app:layout_constraintStart_toStartOf="@id/iv_rank_top"
        app:layout_constraintTop_toTopOf="@id/iv_rank_top" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/textMainStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_rank_top"
        app:layout_constraintEnd_toStartOf="@id/tv_integral"
        app:layout_constraintStart_toEndOf="@id/iv_rank_top"
        app:layout_constraintTop_toTopOf="@id/iv_rank_top"
        tools:text="我是用户名" />

    <TextView
        android:id="@+id/tv_integral"
        style="@style/textMainStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="18dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_rank_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_rank_top"
        tools:text="我是积分" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>