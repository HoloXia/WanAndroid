<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_rank_top"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@color/bgShimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1" />

    <com.lihang.ShadowLayout
        android:id="@+id/tv_user_name"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="10dp"
        app:hl_cornerRadius="@dimen/dp_shimmer_radius"
        app:hl_layoutBackground="@color/bgShimmer"
        app:layout_constraintBottom_toBottomOf="@id/iv_rank_top"
        app:layout_constraintStart_toEndOf="@id/iv_rank_top"
        app:layout_constraintTop_toTopOf="@id/iv_rank_top" />

    <com.lihang.ShadowLayout
        android:id="@+id/tv_integral"
        style="@style/textMainStyle"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="18dp"
        app:hl_cornerRadius="@dimen/dp_shimmer_radius"
        app:hl_layoutBackground="@color/bgShimmer"
        app:layout_constraintBottom_toBottomOf="@id/iv_rank_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_rank_top" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/bgPage"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>